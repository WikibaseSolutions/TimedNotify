{
  "name": "PegaNotify",
  "version": "0.1.0",
  "namemsg": "peganotify-extensionname",
  "url": "https://wikibase-solutions.com",
  "type": "other",
  "author": [
    "[https://mediawiki.org/wiki/User:Xxmarijnw Marijn van Wezel] ([https://wikibase-solutions.com Wikibase Solutions])"
  ],
  "descriptionmsg": "peganotify-desc",
  "license-name": "GPL-2.0-or-later",
  "requires": {
    "MediaWiki": ">= 1.35.0",
    "extensions": {
      "Echo": "*"
    }
  },
  "MessagesDirs": {
    "PegaNotify": [
      "i18n"
    ]
  },
  "AutoloadNamespaces": {
    "PegaNotify\\": "src/"
  },
  "ServiceWiringFiles": [
    "PegaNotify.wiring.php"
  ],
  "Hooks": {
    "BeforeCreateEchoEvent": "PegaNotify\\MediaWiki\\Hooks\\EchoHooks::onBeforeCreateEchoEvent",
    "BeforeInitialize": "BeforeInitializeNotificationRunner",
    "LoadExtensionSchemaUpdates": "DatabaseSchemaUpdater"
  },
  "HookHandlers": {
    "BeforeInitializeNotificationRunner": {
      "class": "PegaNotify\\MediaWiki\\Hooks\\BeforeInitializeNotificationRunner",
      "services": [
        "PegaNotify.NotificationRunner"
      ]
    },
    "DatabaseSchemaUpdater": {
      "class": "PegaNotify\\MediaWiki\\Hooks\\DatabaseSchemaUpdater"
    }
  },
  "config": {
    "PegaNotifyRunRate": {
      "value": 0.05
    },
    "PegaNotifyPushedNotificationRetentionDays": {
      "value": 60
    },
    "PegaNotifyRunDeferred": {
      "value": true
    }
  },
  "manifest_version": 2,
  "load_composer_autoloader": true
}
